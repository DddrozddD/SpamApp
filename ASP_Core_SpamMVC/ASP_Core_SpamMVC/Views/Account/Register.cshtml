<form action="@Url.Action("Register", "Account")" method="post" enctype="multipart/form-data">


    <div style="margin-left:260px;" class="row">
        <div class="col-md-4">
            <label>Login<span style="color:red;">*</span></label>
            <input type="text" name="Login" class="form-control" placeholder="Login">
            <br />
            <label>Email<span style="color:red;">*</span></label>
            <input type="email" name="Email" class="form-control" placeholder="Email">
            <br />
            <label>Password<span style="color:red;">*</span></label>
            <input type="password" name="Password" class="form-control" placeholder="Password">
            <br />
            <label>Repeat password<span style="color:red;">*</span></label>
            <input type="password" name="ConfirmPass" class="form-control" placeholder="ConfirmPass">
            
        </div>
    </div>
    <br />
    <div style="margin:auto; width:100px;">
        <button style="background-color:black; color:white;" type="submit" class="btn btn">Registration</button>
    </div>


</form>
